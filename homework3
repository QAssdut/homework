// 是否年满 18 岁
// 历史订单 （数组）
// 未出行订单 （数组）
{
    int IDCard;
    int age;
    int * hId [50];
    int * nId [10];

}
// Function 方法
// 去订票

// 去检票
-(int) toOrder:(int)id;
-(int) toCheck:(int)id;
@end

