#import "Passenger.h"


@implementation Orders

@end

@implementation Passenger


-(int) toOrder:(int)id
{
    int flag=0;
    
   for(int i=0;i<nid.count;i++){
      if(nId[i]==0){
          nid[i]=id;
          flag=1;
          i=nid.count
      }
   }
   return flag;
}
-(int) toCheck:(int)id
{
    int flag=0;
   for(int i=0;i<nid.count;i++){
      if(nId[i]==id){
      //移到历史记录
          for(int j=0;j<hid.count;j++){
            if(nId[j]==0){
            nhd[j]=id;
            i=hid.count
            }
          }
          flag=1;
          i=nid.count
      }
   }
   return flag;
}

@end
